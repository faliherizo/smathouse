<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.mbds.openhab.lifi.activity.LoginActivity"
    android:id="@+id/linearLayout2">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <TextView
        android:text="Merci de vous connecter pour accéder à l'application."
        android:layout_width="match_parent"
        android:drawableRight="@drawable/iconewarning"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="0.1"
        android:textColor="@android:color/holo_blue_dark"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/email"
                    android:drawableLeft="@drawable/iconemail"
                    android:background="@drawable/bordertext"
                    style="@style/App_EditTextStyle"
                    android:hint="@string/prompt_email"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/inputTextSize"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/id_filteredTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minLines="2" />

                <TextView
                    android:id="@+id/msgTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/id_filteredTxtView"
                    android:layout_below="@+id/id_filteredTxtView"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/password"
                    android:background="@drawable/bordertext"
                    style="@style/App_EditTextStyle"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/iconesecure"
                    android:layout_marginTop="10dp"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/email_sign_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/seconnecter"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"
                />

        </LinearLayout>
    </ScrollView>


</LinearLayout>